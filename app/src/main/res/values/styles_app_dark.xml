<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
		<item name="custom_background">@color/black</item>
		<item name="custom_textColorPrimary">@color/white_transparent_slight</item>
		<item name="custom_textColorSecondary">@color/white_transparent_medium</item>
		<item name="custom_textColorContrastPrimary">@color/white_transparent_slight</item>
		<item name="custom_textColorContrastSecondary">@color/white_transparent_medium</item>
		<item name="custom_fabBackgroundColor">@color/white_dim_slight</item>
		<item name="custom_fabIconColor">@color/black_dim_slight</item>
		<item name="custom_controlColor">@color/white_dim_slight</item>
		<item name="custom_controlColorContrast">@color/white_dim_slight</item>
		<item name="custom_raisedButtonBackground">@color/gray_dark</item>
		<item name="custom_raisedButtonTextColor">@color/white_transparent_slight</item>
		<item name="custom_dialogButtonColor">@color/white_transparent_slight</item>
		<item name="custom_nowplayingBarBackground">@color/gray_dark</item>
		<item name="custom_prefCategoryTitleColor">@color/white_transparent_slight</item>
		<item name="custom_toolbarPopupTheme">@style/PopupMenuStyle.Dark</item>
		<item name="custom_iconMenuSearch">@drawable/ic_search_white</item>
		<item name="custom_iconMenuLyrics">@drawable/ic_lyrics_white</item>
		<item name="custom_iconBackArrow">@drawable/ic_arrow_back_white</item>

		<item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
		<item name="android:windowBackground">@color/black</item>

		<item name="colorPrimary">@color/black</item>
		<item name="colorPrimaryDark">@color/black</item>
		<item name="colorControlNormal">@color/white</item>
		<item name="colorControlActivated">@color/white</item>

		<item name="android:itemTextAppearance">@style/ItemTextAppearance.Dark</item>
		<item name="popupTheme">@style/PopupMenuStyle.Dark</item>
		<item name="actionOverflowMenuStyle">@style/Widget.AppCompat.PopupMenu.Overflow</item>
		<item name="alertDialogTheme">@style/Dialog.Dark</item>
	</style>

	<style name="AppTheme.Dark.Translucent">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<style name="PopupMenuStyle.Dark" parent="ThemeOverlay.AppCompat.ActionBar">
		<item name="android:popupBackground">@color/gray_dark</item>
	</style>

	<style name="ItemTextAppearance.Dark">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="Dialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
		<item name="colorAccent">?custom_dialogButtonColor</item>
		<item name="android:background">@color/gray_dark</item>
	</style>

</resources>