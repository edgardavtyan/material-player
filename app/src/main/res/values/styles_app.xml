<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="custom_background">@color/white</item>
		<item name="custom_textColorPrimary">@color/black_transparent_slight</item>
		<item name="custom_textColorSecondary">@color/black_transparent_medium</item>
		<item name="custom_textColorContrastPrimary">@color/black_transparent_slight</item>
		<item name="custom_textColorContrastSecondary">@color/black_transparent_medium</item>
		<item name="custom_fabBackgroundColor">@color/white</item>
		<item name="custom_fabIconColor">@color/black_dim_slight</item>
		<item name="custom_controlColor">@color/black_dim_slight</item>
		<item name="custom_controlColorContrast">@color/black_dim_slight</item>
		<item name="custom_raisedButtonBackground">@color/black_dim_slight</item>
		<item name="custom_raisedButtonTextColor">@color/white_transparent_slight</item>
		<item name="custom_dialogButtonColor">@color/black_transparent_slight</item>
		<item name="custom_nowplayingBarBackground">@color/white</item>

		<item name="android:windowLightStatusBar">true</item>

		<item name="colorPrimary">@color/white</item>
		<item name="colorPrimaryDark">@color/white</item>
		<item name="colorAccent">@color/black</item>
		<item name="colorControlNormal">?custom_controlColor</item>
		<item name="colorControlActivated">?custom_controlColor</item>

		<item name="prefCategoryTitleColor">@color/primary</item>

		<item name="android:itemTextAppearance">@style/ItemTextAppearance</item>
		<item name="popupTheme">@style/PopupMenuStyle</item>
		<item name="actionOverflowMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>

		<item name="nowPlayingBarBackground">?colorPrimary</item>

		<item name="android:alertDialogTheme">@style/Dialog</item>
		<item name="alertDialogTheme">@style/Dialog</item>

		<item name="rippleContrast">@drawable/ripple_primary</item>
		<item name="collapsingHeaderGradient">@drawable/collapsing_toolbar_gradient_black</item>

		<item name="iconMenuSearch">@drawable/ic_search_white</item>
		<item name="iconBackArrow">@drawable/ic_arrow_back_white</item>
	</style>

	<style name="AppTheme.Translucent">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<style name="PopupMenuStyle" parent="ThemeOverlay.AppCompat.ActionBar">
		<item name="android:popupBackground">@color/white</item>
	</style>

	<style name="ItemTextAppearance">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">?custom_dialogButtonColor</item>
	</style>

	<style name="Toolbar">
		<item name="android:textColorSecondary">?custom_textColorPrimary</item>
		<item name="colorControlNormal">?custom_textColorContrastPrimary</item>
	</style>

</resources>
